<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8DAA5"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_action_food"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            />
        <EditText
            android:id="@+id/search"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:hint="Enter your food"
            android:layout_marginLeft="15dp"
            android:inputType="text"
            />
        <Button
            android:id="@+id/search_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_action_search"
            android:onClick="onSearchClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E89F20"
        android:paddingTop="30dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Bếp của bạn"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discover"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:text="Khám phá"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:onClick="onDiscoverClick"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tủ lạnh bạn hôm nay có những gì?"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn 1 nguyên liệu trong tủ lạnh bạn"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/pig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lợn"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectpig"
            />
        <TextView
            android:id="@+id/fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cá"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectfish"
            />
        <TextView
            android:id="@+id/veget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rau"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectveget"
            />
        <TextView
            android:id="@+id/beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bò"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectbeef"
            />
        <TextView
            android:id="@+id/egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trứng"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectegg"
            />
        <TextView
            android:id="@+id/chic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gà "
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectchic"
            />
        <TextView
            android:id="@+id/pota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoai tây"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectpota"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/toma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà chua"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelecttoma"
            />
        <TextView
            android:id="@+id/goat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dê"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectgoat"
            />
        <TextView
            android:id="@+id/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xúc xích"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectxx"
            />
        <TextView
            android:id="@+id/sheep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cừu"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectsheep"
            />
        <TextView
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoai lang"
            android:textColor="#F30404"
            android:textSize="19dp"
            android:layout_marginRight="15dp"
            android:onClick="onSelectlang"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/discoverList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"

                    />
